<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout13"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/container"
    tools:context=".Class.Classes">

    <Button
        android:id="@+id/btnViewBasis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW"
        app:layout_constraintBottom_toBottomOf="@+id/imgview1"
        app:layout_constraintEnd_toEndOf="@+id/imgview1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgview1" />

    <Button
        android:id="@+id/btnViewPremium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW"
        app:layout_constraintBottom_toBottomOf="@+id/imgView2"
        app:layout_constraintEnd_toEndOf="@+id/imgView2"
        app:layout_constraintStart_toStartOf="@+id/imgView2"
        app:layout_constraintTop_toTopOf="@+id/imgView2" />

    <ImageView
        android:id="@+id/imgview1"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/court"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgView2"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/court2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgview1" />

</androidx.constraintlayout.widget.ConstraintLayout>