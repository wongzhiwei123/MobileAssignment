<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgClass"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/court" />

            <TextView
                android:id="@+id/txtBasicClass"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:text="Basic Class"
                app:layout_constraintStart_toEndOf="@+id/imgClass"
                app:layout_constraintTop_toTopOf="@+id/imgClass" />

            <TextView
                android:id="@+id/txtBasicTrainingDay"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Training Day"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgClass"
                app:layout_constraintTop_toBottomOf="@+id/txtBasicClass"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtBasicTrainingTime"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="Training Time"
                app:layout_constraintBottom_toBottomOf="@+id/imgClass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/txtBasicTrainingDay"
                app:layout_constraintTop_toBottomOf="@+id/txtBasicClass"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtBasicDescription"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imgClass"
                app:layout_constraintTop_toBottomOf="@+id/txtBasicTrainingDay" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>